							{{!Doctor Review will continue from here!}}
						</div>
						</div> --}}

					</div>
				</div>

			</div>

			<div class="desc text-start fs-5 py-5">
				<p>
					{{desc}}
				</p>

			</div>

		</div>

		{{>footer}}

		{{! Bootstrap js cdn link }}
